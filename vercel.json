import { Headers, EnvVars } from './types'; // Assuming custom types are defined in a separate file

interface BuildCommand {
  command: string;
  output?: string;
}

interface RedirectRule {
  source: string;
  destination: string;
  permanent?: boolean;
}

interface CacheStrategy {
  urlPattern: string;
  headers?: Array<{ key: string; value: string }>;
}

interface DeployConfig {
  build: BuildCommand;
  env: EnvVars;
  redirects: Array<RedirectRule>;
  headers: Headers;
  cacheStrategies: Array<CacheStrategy>;
  frameworkSettings: { [key: string]: any };
}

const deployConfig: DeployConfig = {
  build: {
    command: 'next build',
    output: '.next'
  },
  env: {
    NEXT_PUBLIC_API_URL: process.env.NEXT_PUBLIC_API_URL,
    NEXT_PUBLIC_STRIPE_KEY: process.env.NEXT_PUBLIC_STRIPE_KEY
  },
  redirects: [
    { source: '/old-url', destination: '/new-url', permanent: true }
  ],
  headers: [
    {
      source: '/',
      headers: [
        { key: 'Content-Security-Policy', value: "default-src 'self'; script-src 'self' https://api.example.com; object-src 'none';" },
        { key: 'Referrer-Policy', value: 'no-referrer-when-downgrade' }
      ]
    }
  ],
  cacheStrategies: [
    {
      urlPattern: '/static/*',
      headers: [
        { key: 'Cache-Control', value: 'public, max-age=31536000' },
        { key: 'Expires', value: new Date(Date.now() + 31536000 * 1000).toUTCString() }
      ]
    }
  ],
  frameworkSettings: {
    vercel: {
      buildCommand: 'next build',
      startCommand: 'next start'
    },
    netlify: {
      buildCommand: 'yarn run build',
      publishDir: '.next'
    }
  }
};

export default deployConfig;

